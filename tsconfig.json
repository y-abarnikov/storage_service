{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@common/*": ["src/common/*"],
      "@interfaces/*": ["src/common/interfaces/*"],
      "@shared/*": ["src/shared/*"],
    },
    "incremental": true,
    "noUnusedParameters": true,
    "importHelpers": true
  },
  "exclude": ["node_modules", "dist"]
}
